extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        

        
        h1 #{data.project_name}

        
        p #{data.description}

      .project-tech-links-box.box
        h6 Technologies
        ul

          
          each technology in data.technologies
            li= technology
        
        a.btn-link(href= data.live_link target = 'blank') Live Demo
        a.btn-link(href= data.github_link target = 'blank') GitHub Repo

    .project-img-box.box

      
      img.project-img(src=data.image_urls[0], alt=`An image of the ${data.project_name} project`)
      img.project-img(src=data.image_urls[1], alt=`An image of the ${data.project_name} project`)
      

    nav.nav
      a(href='/')
        span &larr;
        |  Back
